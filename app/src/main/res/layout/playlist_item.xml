<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_view_text_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@id/list_view_album_cover"
    android:minHeight="@dimen/list_item_height"
    android:orientation="vertical">

    <!-- Playlist title -->
    <TextView
        android:id="@+id/playlist_view_playlist_title"
        style="@style/ListViewSongPlaylistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Song number tag -->
    <TextView
        android:id="@+id/playlist_view_number_tag"
        style="@style/ListViewTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlist_view_playlist_title"
        android:text="@string/playlist_item_song_number" />

    <!-- Number of songs -->
    <TextView
        android:id="@+id/playlist_view_number"
        style="@style/ListViewNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playlist_view_playlist_title"
        android:layout_toEndOf="@+id/playlist_view_number_tag" />

    <!-- Button on the right side -->
    <ImageView
        android:id="@+id/playlist_view_button"
        style="@style/ListViewPlayEuroButton"
        android:src="@drawable/ic_play_arrow" />

</RelativeLayout>
